<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/stats" />

        <!-- Phone number -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large">

            <ImageView
                style="@style/icon_left"
                android:src="@drawable/ic_call_black_24dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/phone_title"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/phone_value"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <ImageView
                style="@style/icon_right"
                android:src="@drawable/ic_phone_in_talk_black_24dp"/>
        </RelativeLayout>

        <View style="@style/separator"/>

        <!-- E-mail -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large">

            <ImageView
                style="@style/icon_left"
                android:src="@drawable/ic_email_black_24dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/email_title"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/email_value"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <ImageView
                style="@style/icon_right"
                android:src="@drawable/ic_send_black_24dp"/>
        </RelativeLayout>

        <View style="@style/separator"/>

        <!-- Vk.com link -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large">

            <ImageView
                style="@style/icon_left"
                android:src="@drawable/ic_vk"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/vk_title"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/vk_value"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <ImageView
                style="@style/icon_right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </RelativeLayout>

        <View style="@style/separator"/>

        <!-- Github repository -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_large">

            <ImageView
                style="@style/icon_left"
                android:src="@drawable/ic_github_circle"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/github_title"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/github_value"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <ImageView
                style="@style/icon_right"
                android:src="@drawable/ic_visibility_black_24dp"/>
        </RelativeLayout>

        <View style="@style/separator"/>

        <!-- About -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                style="@style/icon_left"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:layout_marginRight="@dimen/spacing_normal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/about_title"
                    android:textColor="@color/grey_light"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/about_value"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>