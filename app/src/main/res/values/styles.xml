<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/spacing_medial_24</item>
        <item name="android:layout_height">@dimen/spacing_medial_24</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial_24</item>
    </style>

    <style name="icon_left" parent="icon">
        <item name="android:layout_marginLeft">@dimen/spacing_medial_24</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="icon_right" parent="icon">
        <item name="android:layout_marginRight">@dimen/spacing_medium_28</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_56</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
    </style>

    <style name="txt_hint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large_56</item>
        <item name="android:layout_marginRight">@dimen/spacing_large_56</item>
        <item name="android:textColorHint">@color/grey_light</item>
    </style>

    <style name="txt_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:fontFamily">@string/ff_regular</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="txt_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium_16</item>
        <item name="android:fontFamily">@string/ff_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
    
    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@android:color/holo_red_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Toolbar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>
</resources>
