<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/spacing_medial</item>
        <item name="android:layout_height">@dimen/spacing_medial</item>
        <item name="android:layout_marginTop">@dimen/spacing_medial</item>
    </style>

    <style name="icon_left" parent="icon">
        <item name="android:layout_marginLeft">@dimen/spacing_medial</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>
    <style name="icon_right" parent="icon">
        <item name="android:layout_marginRight">@dimen/spacing_medium</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_light</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
    </style>

    <style name="txt_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/grey_light</item>
    </style>

    <style name="txt_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>
</resources>
